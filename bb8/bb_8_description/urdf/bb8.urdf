<?xml version="1.0" encoding="utf-8"?>
<robot name="bb8">

  <link name="base_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 -0.3" />
      <mass value="40.0" />
      <inertia ixx="0.16" ixy="0.0" ixz="0.0"
        iyy="0.16" iyz="0.0"
        izz="0.16"/>
      <!-- inertia ixx="1.225" ixy="0.0099" ixz="0.0062" iyy="1.2853" iyz="-0.0034" izz="0.987" /-->
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.0" />
      <geometry>
        <sphere radius="0.1"/> <!-- 0.5 -->
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.0" />
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="orange">
        <color rgba="0 0 .8 1"/>
      </material>    
    </visual>
  </link>
  
  <link name="base_rotation_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0." />
      <mass value="1.0" />
      <inertia ixx="0.004" ixy="0.0" ixz="0.0" iyy="0.004" iyz="0.0" izz="0.004" />
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.0" />
      <geometry>
	<sphere radius="0.1"/>        <!-- box size="0.1 0.1 0.1"/-->
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.0" />
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 .8 1"/>
      </material>    
    </visual>
  </link>


  <joint name="rotation_joint" type="revolute">
    <origin rpy="0 0 0" xyz="0.0 0.0 0.0" />
    <parent link="base_link" />
    <child link="base_rotation_link" />
    <axis xyz="0 0 1" />
    <limit effort="18.85" lower="-1e+16" upper="1e+16" velocity="0.3" />
  </joint>

  <link name="base_direction_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0." />
      <mass value="1.0" />
      <inertia ixx="0.049" ixy="0.0" ixz="0.0" iyy="0.049" iyz="0.0" izz="0.049" />
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0. 0." />
      <geometry>
        <!--mesh filename="package://bb_8_description/meshes/bb8/ball_bb8/ball_bb8.dae" scale="1 1 1"/-->
        <sphere radius="0.35"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0.0 -0.35" />
      <geometry>
        <mesh filename="package://bb_8_description/meshes/bb8/ball_bb8/ball.dae" scale="1 1 1"/>
        <!-- sphere radius="0.5"/ -->      
      </geometry>
      <!--material name="blue">
        <color rgba="0 0 .8 1"/>
      </material-->    
    </visual>
  </link>

  <joint name="direction_joint" type="continuous">
    <origin rpy="0 0 0" xyz="0.0 0.0 0." />
    <parent link="base_rotation_link" />
    <child link="base_direction_link" />
    <axis xyz="1 0 0" />
    <limit effort="18.85" velocity="27.4" />
  </joint>


  <link name="head_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0" />
      <mass value="0.5" />
      <inertia ixx="0.008" ixy="0.0" ixz="0.0" iyy="0.008" iyz="0.0" izz="0.008" />
    </inertial>
    <collision>
      <origin rpy="1.56 0 0" xyz="0 -0.0 -0." />
      <geometry>
        <sphere radius="0.2"/>
        <!-- mesh filename="package://bb_8_description/meshes/bb8/head_bb8/head_bb8.dae" scale="1 1 1"/-->
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 3.14" xyz="0 0.0 -0.35" />
      <geometry>
        <mesh filename="package://bb_8_description/meshes/bb8/head_bb8/head.dae" scale="1 1 1"/>
        <!-- sphere radius="0.2"/ -->
      </geometry>
      <!-- material name="orange">
        <color rgba="0 0 .8 1"/>
      </material-->    
    </visual>
  </link>

  <joint name="head_joint" type="revolute">
    <origin rpy="0 0 0" xyz="0.0 0.0 0." />
    <parent link="base_rotation_link" />
    <child link="head_link" />
    <axis xyz="0 0 1" />
    <limit effort="0.10" velocity="0.1" lower="-1e+16" upper="1e+16"/>
  </joint>


  <!-- Camera -->
  <link name="camera_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>
  
 <joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0. 0 0.6" rpy="0 0 1.57"/>
    <parent link="head_link"/>
    <child link="camera_link"/>
  </joint>
  
  
  <!-- Base is modeled as a big tub sitting on floor, with two wheels -->
  <gazebo reference="base_link">
    <kp>100000000.0</kp>
    <kd>10.0</kd>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <fdir1>1 0 0</fdir1>
    <maxVel>10.0</maxVel>
    <minDepth>0.0005</minDepth>
  </gazebo>

  <gazebo reference="base_rotation_link">
    <kp>100000000.0</kp>
    <kd>10.0</kd>
    <mu1>10</mu1>
    <mu2>10</mu2>
    <fdir1>1 0 0</fdir1>
    <maxVel>1.0</maxVel>
    <minDepth>0.0005</minDepth>
  </gazebo>

  <gazebo reference="base_direction_link">
    <kp>1000000.0</kp>
    <kd>1000.0</kd>
    <mu1>1000</mu1>
    <mu2>1000</mu2>
    <fdir1>1 0 0</fdir1>
    <maxVel>0.01</maxVel>
    <minDepth>0.0005</minDepth>
  </gazebo>


  <!-- gazebo reference="base_sphere_link">
    <kp>100000000.0</kp>
    <kd>10.0</kd>
    <mu1>10</mu1>
    <mu2>10</mu2>
    <fdir1>1 0 0</fdir1>
    <maxVel>1.0</maxVel>
    <minDepth>0.0005</minDepth>
    <material>Gazebo/Orange</material>
  </gazebo -->

  <gazebo reference="head_support_link">
    <kp>500000.0</kp>
    <kd>10.0</kd>
    <mu1>10</mu1>
    <mu2>10</mu2>
    <fdir1>1 0 0</fdir1>
    <maxVel>1.0</maxVel>
    <minDepth>0.003</minDepth>
  </gazebo>

  <gazebo reference="head_link">
    <kp>1000000.0</kp>
    <kd>10.0</kd>
    <mu1>10</mu1>
    <mu2>10</mu2>
    <fdir1>1 0 0</fdir1>
    <maxVel>1.0</maxVel>
    <minDepth>0.003</minDepth>
  </gazebo>

  <!-- gazebo reference="wheel_joint">
    <implicitSpringDamper>1</implicitSpringDamper>
  </gazebo -->

  <gazebo reference="rotation_joint">
    <implicitSpringDamper>1</implicitSpringDamper>
  </gazebo>

  <gazebo reference="direction_joint">
    <implicitSpringDamper>1</implicitSpringDamper>
  </gazebo>

  <gazebo reference="head_joint">
    <implicitSpringDamper>1</implicitSpringDamper>
  </gazebo>

  <gazebo reference="camera_link">
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
  </gazebo>


  <gazebo>
    <plugin name="bb_8_gazebo_plugin" filename="libgazebo_bb_8_controller.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>30</updateRate>
      <leftJoint>direction_joint</leftJoint>
      <rightJoint>rotation_joint</rightJoint>
      <headJoint>head_joint</headJoint>
      <wheelSeparation>0.5380</wheelSeparation>
      <wheelDiameter>0.186</wheelDiameter>
      <torque>60</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_link</robotBaseFrame>
      <publishWheelTF>false</publishWheelTF>
      <publishWheelJointState>true</publishWheelJointState>
    </plugin>
  </gazebo>

